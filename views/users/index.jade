extends ../layout

block content
  h1 List of Users
  span.logout
    a(href=baseUrl+'/add') add user
  if message
    span.msg= message
  if error
    span.error= error 
  else
    table(class="table table-striped")
      tr
        th SNo.
        th Name
        th Email
        th Address
        th Access
        th Delete
        
      each user,i in users
        tr
          td=i+start+1
          td
            a(href=baseUrl+'/edit/'+user.id)=user.name
          td=user.email 
          td=user.address
          td=user.access_type
          td
            a(href=baseUrl+'/del/'+user.id onClick="return confirm('You really want to delete this user?');") X
    div.text-center!= pages
